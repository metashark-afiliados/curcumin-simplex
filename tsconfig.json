// tsconfig.json
/**
 * @file tsconfig.json
 * @description Manifiesto de Configuración y SSoT para el compilador de TypeScript.
 *              Refactorizado para adoptar la resolución de módulos "bundler",
 *              habilitar la interoperabilidad de módulos ESM/CJS, y limpiar las
 *              rutas y patrones de inclusión para una configuración robusta y moderna.
 * @version 4.0.0
 * @author RaZ podesta - MetaShark Tech
 */
{
  "compilerOptions": {
    // --- Rigor y Calidad de Código ---
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,

    // --- Compatibilidad y Entorno de Ejecución ---
    "target": "ES2020", // Actualizado para características modernas de JS
    "module": "esnext",
    "moduleResolution": "bundler", // <<-- MEJORA CRÍTICA: Soluciona errores TS2307
    "esModuleInterop": true, // <<-- MEJORA CRÍTICA: Permite importaciones default de módulos CJS
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "incremental": true,

    // --- Rutas y Alias (SSoT de Navegación del Código) ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@lib/*": ["./src/lib/*"],
      "@scripts/*": ["./scripts/*"],
      "@tests/*": ["./tests/*"]
    },

    // --- Integración con Framework y Herramientas ---
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "*.config.{js,mjs,ts}",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
// tsconfig.json
