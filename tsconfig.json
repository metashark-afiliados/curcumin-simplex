
/**
 * @file tsconfig.json
 * @description Manifiesto de Configuración y SSoT para el compilador de TypeScript.
 *              Configurado con moduleResolution: "bundler".
 *              ACTUALIZACIÓN: Añadido el alias "@lib/*" para mejorar la DX.
 * @version 2.4.0
 * @author Raz Podestá - MetaShark Tech
 */
{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmit": true,
    "isolatedModules": true,
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@tests/*": ["./tests/*"],
      "@config/*": ["./src/config/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "*.config.js",
    "*.config.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

